<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/toolbar_bg"
        app:navigationIcon="@drawable/orangeic_chevron_left_black_24dp"
        app:titleTextColor="@color/statuscolor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="Account Setting "
            android:textColor="#fefefe"
            android:textSize="22dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/toolbar1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"

        android:src="@drawable/images"
        app:civ_border_color="#000000"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#a9a9a9"
        app:civ_shadow_radius="3" />


    <TextView
        android:id="@+id/profname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profimage"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:maxLength="10"
        android:text="Tamrakar"
        android:textColor="#fefefe"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/proos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profname"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:text="Hii! there I'm usind Chatting App "
        android:textColor="#fefefe"
        android:textSize="17dp" />


    <Button
        android:id="@+id/profchangestat"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/proos"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="230dp"
        android:background="@drawable/round_button"
        android:elevation="20dp"
        android:text="Change Status" />


    <Button
        android:id="@+id/profchangeimage"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profchangestat"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_other"
        android:elevation="20dp"
        android:text="Change Image" />


</RelativeLayout>