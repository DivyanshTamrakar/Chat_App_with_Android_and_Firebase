<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"

    >


    <com.mikhaellopez.circularimageview.CircularImageView

        android:id="@+id/friends_userimage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/images"
        app:civ_border_color="#000000"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#a9a9a9"
        app:civ_shadow_radius="3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="39dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/friends_singlename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/userimage"
            android:layout_toRightOf="@+id/userimage"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/friends_single_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Divyansh Tamrakr"
            android:textColor="#000000"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/on_signal"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/mmmm"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>
